rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Admins can manage any document
    match /{document=**} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Logged-in employees can read specific collections
    // and create their own logs.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
    }
    
    match /tasks/{taskId} {
      allow read, update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'employee';
    }

    match /dailyLogs/{logId} {
      allow create: if request.auth != null;
    }

    match /visitorLogs/{logId} {
        allow create: if request.auth != null;
    }

    match /resources/{resourceId} {
      allow read: if request.auth != null;
    }
    
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
    }
    
    match /fakeEmployees/{employeeId} {
      allow read: if request.auth != null;
    }
  }
}
