rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles
    function isAuth() {
      return request.auth != null;
    }

    function isEmployee() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'employee';
    }

    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection:
    // - Admins can read/write any user.
    // - Authenticated users can read their own data.
    match /users/{userId} {
      allow read: if isAuth() && (isAdmin() || request.auth.uid == userId);
      allow write: if isAdmin();
    }

    // Daily Logs:
    // - Employees can create logs for themselves.
    // - Admins can read all logs.
    match /dailyLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isEmployee() && request.resource.data.employeeId == request.auth.uid;
      allow update, delete: if false; // Logs are immutable
    }

    // Tasks:
    // - Admins can manage all tasks.
    // - Employees can read/update tasks assigned to them.
    match /tasks/{taskId} {
      allow read, update: if isAuth() && (isAdmin() || get(/databases/$(database)/documents/tasks/$(taskId)).data.employeeId == request.auth.uid);
      allow create, delete: if isAdmin();
    }
    
    // Resources:
    // - Admins can manage all resources.
    // - All authenticated users can read them.
    match /resources/{resourceId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
    
    // Announcements:
    // - Admins can manage the 'latest' announcement.
    // - All authenticated users can read it.
    match /announcements/latest {
        allow read: if isAuth();
        allow write: if isAdmin();
    }

    // Visitor Logs:
    // - Admins can read all logs.
    // - Employees can create them.
    match /visitorLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isEmployee() && request.resource.data.employeeId == request.auth.uid;
      allow update, delete: if false;
    }

    // Fake Employees for team directory:
    // - Admins can manage them.
    // - All authenticated users can read them.
    match /fakeEmployees/{employeeId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    // App Configuration (Webhook URL)
    // - Admins can manage it.
    // - All authenticated users can read it for form submissions.
    match /config/googleSheetWebhookUrl {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    // Task Fields for dynamic form
    // - Admins can manage them.
    // - All authenticated users can read them to build the form.
    match /taskFields/{fieldId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
  }
}
